<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <RootNamespace>$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
    <Title>CrestApps OrchardCore Products</Title>
    <Description>
      $(OCCMSDescription)

      Module project for products.
    </Description>
    <PackageTags>$(PackageTags) CrestApps OrchardCoreCMS Products</PackageTags>
  </PropertyGroup>

  <PropertyGroup>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
  </PropertyGroup>

  <ItemGroup>
