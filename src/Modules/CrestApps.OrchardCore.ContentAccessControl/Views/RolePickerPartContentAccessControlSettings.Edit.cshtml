@using CrestApps.OrchardCore.ContentAccessControl.ViewModels
@using CrestApps.OrchardCore.Roles.ViewModels

@model RolePickerPartContentAccessControlSettingsViewModel

<div class="mb-3" asp-validation-class-for="RestrictContent">
    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="RestrictContent" />
        <label class="form-check-label" asp-for="RestrictContent">@T["Restrict content?"]</label>
        <span class="hint dashed">@T["When checked, only users in the selected roles will be allowed to access this content."]</span>
    </div>
</div>
