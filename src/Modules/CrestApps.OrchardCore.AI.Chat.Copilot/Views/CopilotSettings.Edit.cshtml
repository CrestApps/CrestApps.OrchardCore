@model CrestApps.OrchardCore.AI.Chat.Copilot.ViewModels.CopilotSettingsViewModel

<fieldset class="form-group">
    <div class="row">
        <div class="col-12">
            <h3>@T["GitHub OAuth Configuration"]</h3>
            <p class="hint">@T["Configure the GitHub OAuth App credentials for Copilot authentication. Create an OAuth App at GitHub Settings → Developer settings → OAuth Apps."]</p>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="ClientId" class="form-label">@T["Client ID"]</label>
        <input asp-for="ClientId" class="form-control" />
        <span asp-validation-for="ClientId" class="text-danger"></span>
        <span class="hint">@T["The Client ID from your GitHub OAuth App."]</span>
    </div>

    <div class="mb-3">
        <label asp-for="ClientSecret" class="form-label">@T["Client Secret"]</label>
        <input asp-for="ClientSecret" type="password" class="form-control" placeholder="@T["Enter new secret to update"]" />
        <span asp-validation-for="ClientSecret" class="text-danger"></span>
        <span class="hint">@T["The Client Secret from your GitHub OAuth App. Leave empty to keep the existing secret."]</span>
    </div>

    <div class="mb-3">
        <label asp-for="CallbackUrl" class="form-label">@T["Callback URL"]</label>
        <input asp-for="CallbackUrl" class="form-control" placeholder="https://your-domain.com/CopilotAuth/OAuthCallback" />
        <span asp-validation-for="CallbackUrl" class="text-danger"></span>
        <span class="hint">@T["The OAuth callback URL configured in your GitHub OAuth App. Should match: {0}", Url.Action("OAuthCallback", "CopilotAuth", new { area = "CrestApps.OrchardCore.AI.Chat.Copilot" })]</span>
    </div>
</fieldset>
