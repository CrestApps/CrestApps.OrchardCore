<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <Title>CrestApps OrchardCore AI Copilot Orchestrator</Title>
    <Description>
      $(CrestAppsDescription)

      Provides a GitHub Copilot SDK-based orchestrator for AI chat sessions.
    </Description>
    <PackageTags>$(PackageTags) OrchardCoreCMS AI Copilot</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GitHub.Copilot.SDK" />
    <PackageReference Include="OrchardCore.Module.Targets" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.AI.Core\CrestApps.OrchardCore.AI.Core.csproj" />
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.AI.Mcp.Core\CrestApps.OrchardCore.AI.Mcp.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- Ensure direct dependencies so consumers don't need to manually include packages -->
    <ProjectReference Include="..\CrestApps.OrchardCore.AI\CrestApps.OrchardCore.AI.csproj" PrivateAssets="none" />
  </ItemGroup>

</Project>
