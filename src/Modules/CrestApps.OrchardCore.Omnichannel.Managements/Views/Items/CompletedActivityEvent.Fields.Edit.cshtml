@using CrestApps.OrchardCore.Omnichannel.Managements.Workflows.ViewModels
@using OrchardCore.Workflows.Models
@model CompletedActivityEventViewModel

<div class="mb-3">
    <label class="form-label" asp-for="CampaignId">@T["Campaign"]</label>
    <select class="form-select" asp-for="CampaignId" asp-items="Model.Campaigns">
        <option value="">@T["Select a campaign"]</option>
    </select>
    <span class="hint">@T["Trigger this event only when the activity belong to this campaign"]</span>
</div>
