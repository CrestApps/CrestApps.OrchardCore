@using CrestApps.OrchardCore.Omnichannel.Managements.ViewModels

@model ListOmnichannelActivityContainer

<form asp-route-area="CrestApps.OrchardCore.Omnichannel.Managements" asp-action="Activities" asp-controller="Activities" method="post">
    @if (Model.Header is not null)
    {
        <div class="card text-bg-theme mb-3 position-sticky action-bar">
            <div class="card-body">
                @await DisplayAsync(Model.Header)
            </div>
        </div>
    }

    <ul class="list-group with-checkbox">
        <li class="list-group-item text-bg-theme">
            <div class="row gx-3">
                <div class="col">
                    @* await DisplayAsync(Model.Header.Summary) *@
                </div>
                <div class="col col-md-auto text-end">
                    @* await DisplayAsync(Model.Header.Actions) *@
                </div>
            </div>
        </li>

        @if (Model.Containers.Count > 0)
        {
            foreach (var container in Model.Containers)
            {
                <li class="list-group-item list-group-item-action list-group-striped">
                    @await DisplayAsync(container)
                </li>
            }
        }
        else
        {
            <li class="list-group-item">
                <div class="alert alert-info mb-0">
                    @T["No activities found."]
                </div>
            </li>
        }
    </ul>
</form>

@if (Model.Pager is not null)
{
    @await DisplayAsync(Model.Pager)
}
