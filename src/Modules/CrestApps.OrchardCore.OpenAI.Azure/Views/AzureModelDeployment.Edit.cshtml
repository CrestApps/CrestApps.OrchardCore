@using CrestApps.OrchardCore.OpenAI.Azure.ViewModels
@using OrchardCore

@model ModelDeploymentViewModel

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="AIModel" class="@Orchard.GetLabelClasses()">@T["AI Model"]</label>
    <div class="@Orchard.GetEndClasses()">
        <select asp-for="AIModel" asp-items="Model.AIModels" class="form-select">
            <option value="">@T["Select an OpenAI model"]</option>
        </select>
        <span class="hint">@T["The OpenAI model to be deployed."]</span>
    </div>
</div>
