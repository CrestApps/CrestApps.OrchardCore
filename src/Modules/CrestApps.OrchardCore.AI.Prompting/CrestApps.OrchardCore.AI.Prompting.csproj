<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <Title>CrestApps OrchardCore AI Prompting Module</Title>
    <Description>
      $(CrestAppsDescription)

      Provides AI prompt template management for Orchard Core with feature-aware discovery, reusable prompt selection in AI Profile and Chat Interaction editors, and Liquid-based template rendering.
    </Description>
    <PackageTags>$(PackageTags) OrchardCoreCMS AI Prompting Templates</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Module.Targets" />
    <PackageReference Include="OrchardCore.DisplayManagement" />
    <PackageReference Include="OrchardCore.Features" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Common\CrestApps.AI.Prompting\CrestApps.AI.Prompting.csproj" />
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.AI.Core\CrestApps.OrchardCore.AI.Core.csproj" />
  </ItemGroup>

</Project>
