@using CrestApps.OrchardCore.AI.Core
@using CrestApps.OrchardCore.AI.Chat.Interactions.ViewModels
@using Microsoft.AspNetCore.Authorization

@inject IAuthorizationService AuthorizationService

@model ListChatInteractionsViewModel

<!-- Hidden submit button do not remove -->
<input type="submit" name="submit.Filter" id="submitFilter" class="visually-hidden" />

<div class="container-fluid">
    <div class="card text-bg-theme mb-3">
        <div class="card-body">
            <div class="row gx-0">
                <div class="col">
                    @await DisplayAsync(Model.Header)
                </div>
                <div class="col-auto ps-1">
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Admin" asp-area="@AIConstants.Feature.ChatInteractions">
                        @T["Chat Interactions"]
                    </a>
                </div>
            </div>
        </div>
    </div>
    <ul class="list-group">
        @if (Model.Interactions.Any())
        {
            @foreach (var interaction in Model.Interactions)
            {
                <li class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex align-items-center">
                            @(string.IsNullOrEmpty(interaction.Title) ? T["Untitled"] : interaction.Title)
                        </div>
                        <div>
                            <a asp-action="Index" asp-controller="Admin" asp-route-itemId="@interaction.ItemId" class="btn btn-sm btn-success">@T["View"]</a>

                            @if (await AuthorizationService.AuthorizeAsync(User, AIPermissions.DeleteChatInteraction, interaction))
                            {
                                <a asp-action="Delete"
                                   asp-controller="Admin"
                                   asp-route-itemId="@interaction.ItemId"
                                   class="btn btn-danger btn-sm"
                                   data-url-af="RemoveUrl UnsafeUrl"
                                   data-title="Delete"
                                   data-message="@T["Are you sure you want to delete this chat interaction?"]"
                                   data-ok-text="@T["Yes"]"
                                   data-cancel-text="@T["Cancel"]">@T["Delete"]</a>
                            }
                        </div>
                    </div>
                </li>
            }
        }
        else
        {
            <li class="list-group-item text-center">
                @T["No chat interactions found."]
            </li>
        }
    </ul>

    @await DisplayAsync(Model.Pager)
</div>
