@using CrestApps.OrchardCore.AI.Chat.Interactions.ViewModels
@using OrchardCore

@model EditChatInteractionTitleViewModel

<div class="mb-3">
    <label asp-for="Title" class="form-label">
        @T["Title"]
        <span class="text-muted" data-bs-toggle="tooltip" title="@T["A descriptive name for this chat interaction. Helps you identify and find this conversation in your history."]">
            <i class="fa-solid fa-circle-question" aria-hidden="true"></i>
        </span>
    </label>
    <input asp-for="Title" class="form-control" placeholder="@T["Enter a title for this interaction..."]" />
</div>
