<div class="container-fluid px-0 chat-interaction-container">
    <div class="d-flex flex-column flex-lg-row">
        @if (Model.Parameters is not null)
        {
            <div class="chat-parameters-panel flex-shrink-0 bg-theme p-3 border rounded mb-3 mb-lg-0">
                @await DisplayAsync(Model.Parameters)
            </div>
        }

        <div class="d-flex flex-column flex-grow-1 ps-lg-3 chat-content-area">
            @if (Model.Header is not null)
            {
                <div class="mb-3 chat-header-area">
                    @await DisplayAsync(Model.Header)
                </div>
            }
            <div class="chat-main-area flex-grow-1 d-flex flex-column">
                @await DisplayAsync(Model.Content)
            </div>
        </div>
    </div>
</div>

<style at="Head">
    .chat-interaction-container {
        height: calc(100vh - var(--oc-top-nav-height, 56px) - 120px);
        min-height: 400px;
    }

    .chat-parameters-panel {
        width: 100%;
        max-width: 100%;
        overflow-y: auto;
    }

    .chat-content-area {
        min-height: 0;
    }

    .chat-main-area {
        min-height: 0;
        overflow: hidden;
    }

    @@media (min-width: 992px) {
        .chat-parameters-panel {
            max-width: 22rem;
            height: 100%;
        }

        .chat-interaction-container {
            height: calc(100vh - var(--oc-top-nav-height, 56px) - 120px);
        }
    }
</style>