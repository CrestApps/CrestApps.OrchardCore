@if (Model.Header is not null)
{
    <div class="container-fluid mb-3">
        @await DisplayAsync(Model.Header)
    </div>
}

<div class="d-flex flex-row h-100">
    @if (Model.Parameters is not null)
    {
        <div class="d-none d-lg-block flex-shrink-0 bg-theme p-3 border rounded me-3" style="width: 22rem; height: calc(100vh - 8rem - var(--oc-top-nav-height, 0)); overflow-y:auto">
            @await DisplayAsync(Model.Parameters)
        </div>
    }

    <div class="d-flex flex-column h-100 flex-grow-1">
        @await DisplayAsync(Model.Content)
    </div>
</div>