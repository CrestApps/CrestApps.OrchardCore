@using CrestApps.OrchardCore.AI.Chat.Interactions.ViewModels
@using OrchardCore

@model InteractionDocumentSettingsViewModel

@if (!Model.IndexProfiles.Any())
{
    <div class="alert alert-warning" role="alert">
        <i class="fa-solid fa-triangle-exclamation me-2"></i>
        <strong>@T["No Index Profiles Configured"]</strong>
        <p class="mb-0">
            @T["There are no index profiles configured for user uploaded documents. To enable document embedding, go to Search > Indexing, click Add index and add \"Chat Interaction Documents (Elasticsearch)\" index."]
        </p>
    </div>
}

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="IndexProfileName" class="@Orchard.GetLabelClasses()">@T["Index profile"]</label>
    <div class="@Orchard.GetEndClasses()">
        <select asp-for="IndexProfileName" asp-items="Model.IndexProfiles" class="form-select">
            <option value="">@T["Select a profile"]</option>
        </select>
        <span class="hint">@T["The index profile used to index documents for chat interactions."]</span>
    </div>
</div>

