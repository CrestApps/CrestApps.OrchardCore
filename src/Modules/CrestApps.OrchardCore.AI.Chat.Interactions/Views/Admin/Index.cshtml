@using System.Text.Json
@using CrestApps.OrchardCore.AI.Core
@using CrestApps.OrchardCore.AI.Chat.Interactions.ViewModels
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Options
@using OrchardCore
@using CrestApps.OrchardCore.AI.Models
@using CrestApps.OrchardCore.Services

@model ChatInteractionViewModel

@inject IOptions<AIOptions> AIOptions
@inject IAuthorizationService AuthorizationService
@inject ISourceCatalogManager<ChatInteraction> SourceCatalogManager

@if (Model.Content is null)
{
    <zone Name="Title"><h1>@RenderTitleSegments(T["Chat Interactions"])</h1></zone>

    <div class="container-fluid">
        <div class="card text-bg-theme mb-3">
            <div class="card-body">
                <div class="row gx-3">
                    <div class="col"></div>
                    <div class="col-auto">
                        @{
                            var dummyInteraction = await SourceCatalogManager.NewAsync("DummySource");
                        }

                        @if (await AuthorizationService.AuthorizeAsync(User, AIPermissions.EditChatInteractions, dummyInteraction))
                        {
                            <button type="button" class="btn btn-primary create" role="button" data-bs-toggle="modal" data-bs-target="#modalSelectSource">
                                <i class="fa-solid fa-plus"></i> @T["New Chat"]
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>

        <ul class="list-group">
            @if (Model.History is not null && Model.History.Count > 0)
            {
                @foreach (var record in Model.History)
                {
                    var interaction = record.Properties["Interaction"] as ChatInteraction;
                    if (interaction is not null)
                    {
                        <li class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex align-items-center">
                                    @(string.IsNullOrEmpty(interaction.Title) ? T["Untitled"] : interaction.Title)
                                </div>
                                <div>
                                    <a asp-action="Index" asp-controller="Admin" asp-route-itemId="@interaction.ItemId" class="btn btn-sm btn-success">@T["View"]</a>

                                    @if (await AuthorizationService.AuthorizeAsync(User, AIPermissions.DeleteChatInteraction, interaction))
                                    {
                                        <a asp-action="Delete"
                                           asp-controller="Admin"
                                           asp-route-itemId="@interaction.ItemId"
                                           class="btn btn-danger btn-sm"
                                           data-url-af="RemoveUrl UnsafeUrl"
                                           data-title="Delete"
                                           data-message="@T["Are you sure you want to delete this chat interaction?"]"
                                           data-ok-text="@T["Yes"]"
                                           data-cancel-text="@T["Cancel"]">@T["Delete"]</a>
                                    }
                                </div>
                            </div>
                        </li>
                    }
                }
            }
            else
            {
                <li class="list-group-item text-center">
                    @T["No chat interactions found. Click 'New Chat' to start a conversation."]
                </li>
            }
        </ul>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="modalSelectSource" tabindex="-1" role="dialog" aria-labelledby="available-sources-title" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="available-sources-title">@T["Select a Source"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (!Model.Sources.Any())
                    {
                        <p class="p-3 mb-2 bg-warning text-white">@T["You need to enable a feature which provides an AI source."]</p>
                    }
                    else
                    {
                        <div class="row row-cols-1 row-cols-md-3 g-2">
                            @foreach (var sourceName in Model.Sources)
                            {
                                if (!AIOptions.Value.ProfileSources.TryGetValue(sourceName, out var source))
                                {
                                    continue;
                                }

                                <div class="col">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <h4>@(source.DisplayName)</h4>
                                            <p class="hint">@(source.Description)</p>
                                        </div>
                                        <div class="card-footer text-muted text-sm-end">
                                            <a class="btn btn-primary btn-sm"
                                               asp-action="Index"
                                               asp-controller="Admin"
                                               asp-route-source="@sourceName">@T["Start Chat"]</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@T["Cancel"]</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="d-flex flex-row h-100 mx-3">

        <div class="d-flex flex-column h-100 flex-grow-1">
            @await DisplayAsync(Model.Content)
        </div>

        @if (Model.History is not null && Model.History.Count > 0)
        {
            <div class="d-none d-md-block flex-shrink-0 bg-theme p-2 ps-3 border rounded" style="width: 20rem; height: calc(100vh - 2rem - var(--oc-top-nav-height, 0)); overflow-y:auto">
                <div class="list-group">
                    @foreach (var record in Model.History)
                    {
                        @await DisplayAsync(record)
                    }
                </div>
            </div>
        }

    </div>
}

<style at="Head">
    .ta-content {
        height: 100% !important;
        padding-left: 0 !important;
        padding-right: 0 !important;
        padding-bottom: 0 !important;
    }
</style>
