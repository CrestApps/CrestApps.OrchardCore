@using CrestApps.OrchardCore.Subscriptions.Models

@model CreateUserViewModel

<div class="mb-3">
    <label asp-for="UserName" class="form-label">@T["Username"]</label>
    <input asp-for="UserName" class="form-control" autofocus autocomplete="new-password" />
    <span asp-validation-for="UserName" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Email" class="form-label">@T["Email address"]</label>
    <input type="email" asp-for="Email" class="form-control" autocomplete="new-password" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Password" class="form-label">@T["Password"]</label>
    <input type="password" asp-for="Password" class="form-control" autocomplete="new-password" placeholder="@(Model.HasSavedPassword ? T["A password is securely stored. Provide a new one to replace it."]: T["Set a password for your new account."])" />
    <span asp-validation-for="Password" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="ConfirmPassword" class="form-label">@T["Confirm password"]</label>
    <input type="password" asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="@(Model.HasSavedPassword ? T["A password is securely stored. Provide a new one to replace it."]: T["Set a verification password for your new account."])" />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
</div>
