@using CrestApps.OrchardCore.Subscriptions.ViewModels

@model UserRegistrationStepViewModel

@if (Model.AllowGuestSignup)
{
    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="ContinueAsGuest" checked="@Model.ContinueAsGuest" role="button" data-bs-toggle="collapse" data-bs-target="#User_Registration_Subscription" aria-expanded="false" aria-controls="User_Registration_Subscription">
        <label class="form-check-label" asp-for="ContinueAsGuest">
            @T["Subscribe as guest"]
        </label>
        <span>@T["Subscribing as a guest will not give you access to manage your subscription."]</span>
    </div>
}

<div id="User_Registration_Subscription" class="collapse@(!Model.AllowGuestSignup || !Model.ContinueAsGuest ? " show" : string.Empty)">
    @await DisplayAsync(Model.SignupForm)
</div>
