@model CrestApps.OrchardCore.AI.Chat.ViewModels.ChatAnalyticsDayOfWeekViewModel

<div class="card mb-3">
    <div class="card-header">
        <h5 class="card-title mb-0">
            <i class="fa-regular fa-calendar-days me-1"></i>@T["Usage by Day of Week"]
            <i class="fa-solid fa-circle-info ms-1 small" data-bs-toggle="tooltip" title="@T["Shows how chat sessions are distributed across the days of the week. Helps identify peak usage days for capacity planning."]"></i>
        </h5>
    </div>
    <div class="card-body">
        @if (Model.DayDistribution.Any(d => d.SessionCount > 0))
        {
            var maxCount = Model.DayDistribution.Max(d => d.SessionCount);

            <div class="table-responsive">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th style="width: 120px;">@T["Day"]</th>
                            <th>@T["Sessions"]</th>
                            <th style="width: 60%;">@T["Distribution"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var day in Model.DayDistribution)
                        {
                            var widthPercent = maxCount > 0 ? (int)((double)day.SessionCount / maxCount * 100) : 0;
                            <tr>
                                <td>@day.Label</td>
                                <td>@day.SessionCount</td>
                                <td>
                                    <div class="progress" style="height: 20px;">
                                        <div class="progress-bar bg-success" role="progressbar" style="width: @(widthPercent)%" aria-valuenow="@day.SessionCount" aria-valuemin="0" aria-valuemax="@maxCount">
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted mb-0">@T["No session data available for the selected period."]</p>
        }
    </div>
</div>
