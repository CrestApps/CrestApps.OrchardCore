@using CrestApps.OrchardCore.AI.Core
@using CrestApps.OrchardCore.AI.Chat.ViewModels
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@model ListChatSessionsViewModel

@{
    var canDeleteSession = await AuthorizationService.AuthorizeAsync(User, AIPermissions.DeleteChatSession);
}

<input type="submit" name="submit.Filter" id="submitFilter" class="visually-hidden" />

<div class="card text-bg-theme mb-3">
    <div class="card-body">
        <div class="row gx-0">
            <div class="col">
                @await DisplayAsync(Model.Header)
            </div>
            <div class="col-auto ps-1">
                <a class="btn btn-secondary" asp-action="NewAIChatSession" asp-controller="CustomChat">
                    <i class="fa-solid fa-plus"></i> @T["New Chat"]
                </a>

                <a asp-action="DeleteAll"
                   asp-controller="CustomChat"
                   class="btn btn-danger"
                   data-url-af="RemoveUrl UnsafeUrl"
                   data-title="Delete"
                   data-message="@T["Are you sure you want to delete all chat history?"]"
                   data-ok-text="@T["Yes"]"
                   data-cancel-text="@T["Cancel"]">
                    <i class="fa-solid fa-trash"></i> @T["Delete Chat History"]
                </a>
            </div>
        </div>
    </div>
</div>

<ul class="list-group">
    @if (Model.ChatSessions.Any())
    {
        @foreach (var session in Model.ChatSessions)
        {
            <li class="list-group-item list-group-item-action">
                <div class="d-flex justify-content-between">
                    <div class="d-flex align-items-center">@session.Title</div>
                    <div>
                        <a asp-action="Index" asp-controller="CustomChat" asp-route-sessionId="@session.SessionId" class="btn btn-sm btn-success">@T["View"]</a>

                        @if (!string.IsNullOrEmpty(session.UserId) && canDeleteSession)
                        {
                            <a asp-action="Delete"
                               asp-controller="CustomChat"
                               asp-route-sessionId="@session.SessionId"
                               class="btn btn-danger btn-sm"
                               data-url-af="RemoveUrl UnsafeUrl"
                               data-title="Delete"
                               data-message="@T["Are you sure you want to delete this chat session?"]"
                               data-ok-text="@T["Yes"]"
                               data-cancel-text="@T["Cancel"]">@T["Delete"]</a>
                        }
                    </div>
                </div>
            </li>
        }
    }
    else
    {
        <li class="list-group-item text-center">@T["No chat history found."]</li>
    }
</ul>

@await DisplayAsync(Model.Pager)
