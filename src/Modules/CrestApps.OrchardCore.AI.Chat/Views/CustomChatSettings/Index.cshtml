@using CrestApps.OrchardCore.AI.Chat.Models
@using CrestApps.OrchardCore.AI.Models
@using CrestApps.OrchardCore.Core.Models
@using Microsoft.AspNetCore.Mvc.Localization

@model ListCatalogEntryViewModel<AIChatSession>

<zone Name="Title"><h1>@RenderTitleSegments(T["Custom Chat Instances"])</h1></zone>

<div class="card text-bg-theme mb-3 position-sticky action-bar">
    <div class="card-body">
        <div class="row gx-3">
            <div class="col-auto">
                <a asp-controller="CustomChatSettings" asp-action="Create" class="btn btn-primary" role="button">
                    <i class="fa-solid fa-plus"></i> @T["Create Instance"]
                </a>
            </div>
        </div>
    </div>
</div>

<ul class="list-group">
    @if (Model.CustomModels.Count > 0)
    {
        @foreach (var entry in Model.CustomModels)
        {
            <li class="list-group-item">
                <div class="row align-items-center">
                    <div class="col">
                        <h5 class="mb-1">
                            <a asp-controller="CustomChatSettings" asp-action="Edit" asp-route-sessionId="@entry.Model.SessionId">
                                @entry.Model.Title
                            </a>
                        </h5>

                        <small class="text-muted">Created: @entry.Model.CreatedUtc.ToLocalTime().ToString("g")</small>

                    </div>

                    <div class="col-auto">
                        <div class="d-flex align-items-center gap-2">
                            <a asp-controller="CustomChat" asp-action="Index" asp-route-sessionId="@entry.Model.SessionId" class="btn btn-outline-success btn-sm">
                                @T["Chat"]
                            </a>
                            <a asp-controller="CustomChatSettings" asp-action="Edit" asp-route-sessionId="@entry.Model.SessionId" class="btn btn-outline-primary btn-sm">
                                @T["Edit"]
                            </a>
                            <form asp-controller="CustomChatSettings" asp-action="Delete" asp-route-sessionId="@entry.Model.SessionId" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    @T["Delete"]
                                </button>
                            </form>
                        </div>

                    </div>

                </div>
            </li>
        }
    }
    else
    {
        <li class="list-group-item list-group-item-info text-center">
            <i class="fa-solid fa-inbox fa-2x mb-2"></i>
            <p class="mb-0">@T["<strong>Nothing here!</strong> You haven't created any custom chat instances yet."]</p>
        </li>
    }
</ul>
