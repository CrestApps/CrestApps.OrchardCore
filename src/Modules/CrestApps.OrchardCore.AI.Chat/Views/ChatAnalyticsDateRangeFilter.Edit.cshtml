@model CrestApps.OrchardCore.AI.Chat.ViewModels.ChatAnalyticsFilterViewModel

<style asp-name="flatpickr"></style>
<script asp-name="flatpickr" at="Foot"></script>

<div class="row mb-3">
    <div class="col-md-6">
        <label class="form-label" asp-for="StartDate">@T["Start Date"]</label>
        <input type="text" class="form-control" asp-for="StartDate" placeholder="@T["Select start date..."]" />
        <span class="hint">@T["Filter sessions starting from this date."]</span>
    </div>
    <div class="col-md-6">
        <label class="form-label" asp-for="EndDate">@T["End Date"]</label>
        <input type="text" class="form-control" asp-for="EndDate" placeholder="@T["Select end date..."]" />
        <span class="hint">@T["Filter sessions up to this date."]</span>
    </div>
</div>

<script at="Foot" depends-on="flatpickr">
    flatpickr('#@Html.IdFor(m => m.StartDate)', {
        dateFormat: 'Y-m-d',
        allowInput: true
    });
    flatpickr('#@Html.IdFor(m => m.EndDate)', {
        dateFormat: 'Y-m-d',
        allowInput: true
    });
</script>
