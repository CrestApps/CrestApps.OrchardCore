@model CrestApps.OrchardCore.AI.Models.AIChatSession
@using CrestApps.OrchardCore.AI.Core.Models
@using OrchardCore.Entities
@{
    var metadata = Model.As<AIChatInstanceMetadata>();
}

<div class="row align-items-center">
    <div class="col">
        <h5 class="mb-1">
            <a asp-controller="CustomChatSettings" asp-action="Edit" asp-route-sessionId="@Model.SessionId">
                @Model.Title
            </a>
        </h5>
        <small class="text-muted">
            Created: @Model.CreatedUtc.ToLocalTime().ToString("g")
        </small>
    </div>

    <div class="col-auto">
        <div class="btn-group btn-group-sm" role="group">
            <a asp-controller="CustomChatSettings" asp-action="Edit" asp-route-sessionId="@Model.SessionId" class="btn btn-outline-primary">
                Edit
            </a>

            <form asp-controller="CustomChatSettings" asp-action="Delete" asp-route-sessionId="@Model.SessionId" method="post" style="display:inline;">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
