@using CrestApps.OrchardCore.AI.Chat.Models
@using CrestApps.OrchardCore.AI.Core.Models
@using OrchardCore.Entities

@model AIChatSession

@{
    var metadata = Model.As<AIChatInstanceMetadata>();
}

<div class="row align-items-center">
    <div class="col">
        <h5 class="mb-1">
            <a asp-controller="CustomChat" asp-action="Edit" asp-route-sessionId="@Model.SessionId">
                @Model.Title
            </a>
        </h5>
        <small class="text-muted">
            @T["Created:"] @Model.CreatedUtc.ToLocalTime().ToString("g")
        </small>
    </div>
    <div class="col-auto">
        <div class="btn-group btn-group-sm" role="group">
            <a asp-controller="CustomChat" asp-action="Edit" asp-route-sessionId="@Model.SessionId" class="btn btn-outline-primary">
                <i class="fa-solid fa-edit"></i> @T["Edit"]
            </a>
            <form asp-controller="CustomChat" asp-action="Delete" asp-route-sessionId="@Model.SessionId" method="post" style="display: inline;" 
                  onsubmit="return confirm('@T["Are you sure you want to delete this custom chat instance? This action cannot be undone."]');">
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fa-solid fa-trash"></i> @T["Delete"]
                </button>
            </form>
        </div>
    </div>
</div>
