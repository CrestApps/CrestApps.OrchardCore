@model CrestApps.OrchardCore.AI.Chat.ViewModels.ChatAnalyticsIndexViewModel

<zone Name="Title"><h1>@T["AI Chat Analytics"]</h1></zone>

<form asp-action="Index" method="post">
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="card-title mb-0">@T["Filters"]</h5>
        </div>
        <div class="card-body">
            @await DisplayAsync(Model.FilterShape)
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                <i class="fa-solid fa-magnifying-glass me-1"></i>@T["Generate Report"]
            </button>
        </div>
    </div>
</form>

@if (Model.ShowReport && Model.ReportShape != null)
{
    <div id="analytics-report">
        @await DisplayAsync(Model.ReportShape)
    </div>

    <div class="mt-3">
        <form asp-action="Export" method="post">
            @if (Model.Filter.StartDateUtc.HasValue)
            {
                <input type="hidden" name="StartDate" value="@Model.Filter.StartDateUtc.Value.ToString("o")" />
            }
            @if (Model.Filter.EndDateUtc.HasValue)
            {
                <input type="hidden" name="EndDate" value="@Model.Filter.EndDateUtc.Value.ToString("o")" />
            }
            @if (!string.IsNullOrEmpty(Model.Filter.ProfileId))
            {
                <input type="hidden" name="ProfileId" value="@Model.Filter.ProfileId" />
            }
            <button type="submit" class="btn btn-outline-secondary">
                <i class="fa-solid fa-file-csv me-1"></i>@T["Export as CSV"]
            </button>
        </form>
    </div>
}
