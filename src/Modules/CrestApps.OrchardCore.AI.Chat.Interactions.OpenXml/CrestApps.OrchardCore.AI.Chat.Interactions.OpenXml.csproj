<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <Title>CrestApps OrchardCore AI Chat Interactions OpenXml Module</Title>
    <Description>
      $(CrestAppsDescription)

      Provides ad-hoc AI chat interactions against uploaded OpenXml files.
    </Description>
    <PackageTags>$(PackageTags) OrchardCoreCMS AI Chat Interactions</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Module.Targets" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Abstractions\CrestApps.OrchardCore.Abstractions\CrestApps.OrchardCore.Abstractions.csproj" />
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.AI.Core\CrestApps.OrchardCore.AI.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- 
      Ensure this module directly depends on the required packages so that when someone installs it, 
      they won't need to manually include the AI Chat Interactions Documents package. 
      This guarantees the module functions correctly and resolves the feature dependency.
    -->
    <ProjectReference Include="..\CrestApps.OrchardCore.AI.Chat.Interactions.Documents\CrestApps.OrchardCore.AI.Chat.Interactions.Documents.csproj" PrivateAssets="none" />
  </ItemGroup>

</Project>
