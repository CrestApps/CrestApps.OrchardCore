<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <Title>CrestApps OrchardCore AI Documents - Elasticsearch</Title>
    <Description>
      $(CrestAppsDescription)

      Elasticsearch support for AI document embeddings and indexing.
    </Description>
    <PackageTags>$(PackageTags) OrchardCoreCMS AI Documents Elasticsearch</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Module.Targets" />
    <PackageReference Include="OrchardCore.Search.Elasticsearch.Core" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.AI.Chat.Interactions.Core\CrestApps.OrchardCore.AI.Chat.Interactions.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- 
      Ensure this module directly depends on the required packages so that when someone installs it, 
      they won't need to manually include the AI Documents package. 
      This guarantees the module functions correctly and resolves the feature dependency.
    -->
    <ProjectReference Include="..\CrestApps.OrchardCore.AI.Documents\CrestApps.OrchardCore.AI.Documents.csproj" PrivateAssets="none" />
  </ItemGroup>

</Project>