@using CrestApps.OrchardCore.AI.Mcp.Core.Models
@using OrchardCore.DisplayManagement.Shapes

@model ShapeViewModel<McpPrompt>

<div class="metadata-info">
    @if (!string.IsNullOrEmpty(Model.Value.Author))
    {
        <span class="text-muted">@T["Created by {0}", Model.Value.Author]</span>
    }
    @if (Model.Value.CreatedUtc != default)
    {
        <span class="text-muted">@T["on {0}", Model.Value.CreatedUtc.ToString("g")]</span>
    }
</div>
