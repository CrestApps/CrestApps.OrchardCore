<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <Title>CrestApps OrchardCore AI Chat Interactions Documents - Azure AI</Title>
    <Description>
      $(CrestAppsDescription)

      Azure AI Search support for chat interaction documents.
    </Description>
    <PackageTags>$(PackageTags) OrchardCoreCMS AI Chat Interactions AzureAI</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Module.Targets" />
    <PackageReference Include="OrchardCore.Search.AzureAI.Core" />
    <PackageReference Include="Azure.Search.Documents" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.AI.Chat.Interactions.Core\CrestApps.OrchardCore.AI.Chat.Interactions.Core.csproj" />
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.OpenAI.Azure.Core\CrestApps.OrchardCore.OpenAI.Azure.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- 
      Ensure this module directly depends on the required packages so that when someone installs it, 
      they won't need to manually include the AI Chat Interactions Documents package. 
      This guarantees the module functions correctly and resolves the feature dependency.
    -->
    <ProjectReference Include="..\CrestApps.OrchardCore.AI.Chat.Interactions.Documents\CrestApps.OrchardCore.AI.Chat.Interactions.Documents.csproj" PrivateAssets="none" />
  </ItemGroup>

</Project>