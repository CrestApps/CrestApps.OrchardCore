<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <Title>CrestApps OrchardCore AI Data Sources - Elasticsearch</Title>
    <Description>
      $(CrestAppsDescription)

      Elasticsearch support for AI data source document embeddings, vector search, and indexing.
    </Description>
    <PackageTags>$(PackageTags) OrchardCoreCMS AI DataSources Elasticsearch</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Module.Targets" />
    <PackageReference Include="OrchardCore.Search.Elasticsearch.Core" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.AI.Core\CrestApps.OrchardCore.AI.Core.csproj" />
  </ItemGroup>

</Project>
