@using CrestApps.OrchardCore.OpenAI.Core
@using CrestApps.OrchardCore.OpenAI.Models
@using OrchardCore.DisplayManagement.Views

@model ShapeViewModel<OpenAIChatProfile>

<a asp-action="Edit"
   asp-controller="ChatProfiles"
   asp-route-id="@Model.Value.Id"
   class="btn btn-primary btn-sm">@T["Edit"]</a>

@if (Model.Value.GetSettings<OpenAIChatProfileSettings>().IsRemovable)
{
    <a asp-action="Delete"
       asp-controller="ChatProfiles"
       asp-route-id="@Model.Value.Id"
       class="btn btn-danger btn-sm"
       data-url-af="RemoveUrl UnsafeUrl">@T["Delete"]</a>
}
