@using CrestApps.OrchardCore.AI.ViewModels
@using OrchardCore

@model AIProviderConnectionFieldsViewModel

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="DisplayText" class="@Orchard.GetLabelClasses()">@T["Title"]</label>
    <div class="@Orchard.GetEndClasses()">
        <input type="text" asp-for="DisplayText" class="form-control" />
        <span asp-validation-for="DisplayText" class="text-danger"></span>
        <span class="hint">@T["The display text for the connection."]</span>
    </div>
</div>

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="Name" class="@Orchard.GetLabelClasses()">@T["Technical name"]</label>
    <div class="@Orchard.GetEndClasses()">
        <input asp-for="Name" class="form-control" disabled="@(!Model.IsNew)" />
        <span asp-validation-for="Name" class="text-danger"></span>
        @if (Model.IsNew)
        {
            <span class="hint">@T["Connection name. This name cannot be changed later."]</span>
        }
        else
        {
            <span class="hint">@T["Connection name."]</span>
        }
    </div>
</div>

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="DefaultDeploymentName" class="@Orchard.GetLabelClasses()">@T["Chat deployment name"]</label>
    <div class="@Orchard.GetEndClasses()">
        <input type="text" asp-for="DefaultDeploymentName" class="form-control" />
        <span asp-validation-for="DefaultDeploymentName" class="text-danger"></span>
        <span class="hint">@T["The default deployment or model name used by the provider for this connection."]</span>
    </div>
</div>

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="DefaultEmbeddingDeploymentName" class="@Orchard.GetLabelClasses()">@T["Embedding deployment name"]</label>
    <div class="@Orchard.GetEndClasses()">
        <input type="text" asp-for="DefaultEmbeddingDeploymentName" class="form-control" />
        <span asp-validation-for="DefaultEmbeddingDeploymentName" class="text-danger"></span>
        <span class="hint">@T["The default embedding deployment or model name used by the provider for this connection."]</span>
    </div>
</div>

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="DefaultImagesDeploymentName"class="@Orchard.GetLabelClasses()">@T["Images deployment name"]</label>
    <div class="@Orchard.GetEndClasses()">
        <input type="text" asp-for="DefaultImagesDeploymentName" class="form-control" />
        <span asp-validation-for="DefaultImagesDeploymentName" class="text-danger"></span>
        <span class="hint">@T["The default image generation deployment or model name used by the provider for this connection."]</span>
    </div>
</div>

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="DefaultUtilityDeploymentName" class="@Orchard.GetLabelClasses()">@T["Utility deployment name"]</label>
    <div class="@Orchard.GetEndClasses()">
        <input type="text" asp-for="DefaultUtilityDeploymentName" class="form-control" />
        <span asp-validation-for="DefaultUtilityDeploymentName" class="text-danger"></span>
        <span class="hint">@T["Optional lightweight model used for auxiliary tasks such as query rewriting, intent detection, and chart generation. When empty, the chat deployment name is used as a fallback."]</span>
    </div>
</div>

<div class="@Orchard.GetWrapperClasses()">
    <div class="@Orchard.GetEndClasses(true)">
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="IsDefault">
            <label class="form-check-label" asp-for="IsDefault">@T["Is default"]</label>
            <span class="hint dashed">@T["When enabled, this connection will be treated as the default connection for this provider."]</span>
        </div>
    </div>
</div>

@if (Model.IsNew)
{
    <script asp-name="technical-name-generator"></script>
    <script>
        window.initAutoGenerateTechnicalName('@Html.IdFor(x => x.DisplayText)', '@Html.IdFor(x => x.Name)');
    </script>
}
