@using CrestApps.OrchardCore.AI.ViewModels
@model ToolInstanceViewModel

<zone Name="Title">
    <h1>@RenderTitleSegments(T["New '{0}' Instance", Model.DisplayName])</h1>
</zone>

<form method="post" enctype="multipart/form-data" class="no-multisubmit">
    @Html.ValidationSummary()
    @await DisplayAsync(Model.Editor)

    <button class="btn btn-primary" type="submit">@T["Save"]</button>

    <a class="btn btn-secondary cancel"
       role="button"
       asp-route-action="Index"
       asp-route-controller="ToolInstances">@T["Cancel"]</a>
</form>
