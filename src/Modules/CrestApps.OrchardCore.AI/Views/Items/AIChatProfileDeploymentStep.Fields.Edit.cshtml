@using CrestApps.OrchardCore.AI.Deployments.ViewModels

@model AIChatProfileDeploymentStepViewModel

<h5 class="mb-3">@T["AI Chat Profiles"]</h5>

<div class="mb-3">
    <div class="form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IncludeAll" data-bs-toggle="collapse" role="button" data-bs-target="#profiles-list" aria-expanded="false" aria-controls="profiles-list" />
            @T["Include all AI chat profiles."]
        </label>
    </div>
</div>

<div id="profiles-list" class="collapse@(Model.IncludeAll ? string.Empty : " show")">
    <div class="hint mb-1">@T["The AI chat profiles to export as part of the plan."]</div>

    <ul class="list-group mb-3">
        @foreach (var profileName in Model.AllProfileNames)
        {
            var isChecked = Model.ProfileNames?.Contains(profileName);

            <li class="list-group-item">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="@Html.NameFor(m => m.ProfileNames)" value="@profileName" checked="@isChecked">
                        @profileName
                    </label>
                </div>
            </li>
        }
    </ul>

</div>
