@using CrestApps.OrchardCore.AI.Deployments.ViewModels

@model AIDeploymentStepViewModel

<h5 class="mb-3">@T["Delete AI Deployments"]</h5>

<div class="mb-3">
    <div class="form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IncludeAll" data-bs-toggle="collapse" role="button" data-bs-target="#delete-deployments-list" aria-expanded="false" aria-controls="delete-deployments-list" />
            @T["Delete all AI deployments"]
        </label>
    </div>
</div>

<div id="delete-deployments-list" class="collapse@(Model.IncludeAll ? string.Empty : " show")">
    <div class="hint mb-1">@T["Provide the names of the AI deployments to delete as part of the plan. If left empty, nothing will be deleted."]</div>

    <ul class="list-group mb-3">
        @if (Model.AllDeploymentName is not null)
        {
            foreach (var deploymentName in Model.AllDeploymentName)
            {
                var isChecked = Model.DeploymentNames?.Contains(deploymentName);

                <li class="list-group-item">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="@Html.NameFor(m => m.DeploymentNames)" value="@deploymentName" checked="@isChecked">
                            @deploymentName
                        </label>
                    </div>
                </li>
            }
        }
        else
        {
            <li class="list-group-item">
                <em>@T["No deployments found."]</em>
            </li>
        }
    </ul>
</div>
