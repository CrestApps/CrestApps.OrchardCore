@using CrestApps.OrchardCore.AI.Tools.ViewModels
@using OrchardCore

@model CustomChatToolViewModel

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="CustomChatInstanceId" class="@Orchard.GetLabelClasses()">
        @T["Custom Chat Instance"]
    </label>

    <div class="@Orchard.GetEndClasses()">
        <select asp-for="CustomChatInstanceId"
                asp-items="Model.Instances"
                class="form-select">
            <option value="">@T["Select a Custom Chat"]</option>
        </select>

        <span asp-validation-for="CustomChatInstanceId" class="text-danger"></span>
        <span class="hint">
            @T["Select the Custom Chat instance this tool should target."]
        </span>
    </div>
</div>
