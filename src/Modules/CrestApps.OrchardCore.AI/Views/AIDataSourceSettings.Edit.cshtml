@using CrestApps.OrchardCore.AI.ViewModels
@using OrchardCore

@model AIDataSourceSettingsViewModel

<div class="@Orchard.GetWrapperClasses()">
    <div class="@Orchard.GetEndClasses(true)">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="EnableEarlyRag" />
            <label class="form-check-label" asp-for="EnableEarlyRag">
                @T["Enable Preemptive Retrieval-Augmented Generation (RAG)"]
            </label>
            <span class="hint dashed">@T["When enabled, it reduces AI latency and could improve results. Individual profiles can override this setting."]</span>
        </div>
    </div>
</div>

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="DefaultStrictness" class="@Orchard.GetLabelClasses()">@T["Default Strictness"]</label>
    <div class="@Orchard.GetEndClasses()">
        <input type="number" class="form-control" asp-for="DefaultStrictness" step="1" min="1" max="5">
        <span class="hint">@T["Default strictness threshold (1-5) for categorizing documents as relevant. Used when a profile does not specify its own value."]</span>
    </div>
</div>

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="DefaultTopNDocuments" class="@Orchard.GetLabelClasses()">@T["Default Top Documents"]</label>
    <div class="@Orchard.GetEndClasses()">
        <input type="number" class="form-control" asp-for="DefaultTopNDocuments" step="1" min="3" max="20">
        <span class="hint">@T["Default number of top-scoring documents to retrieve (3-20). Used when a profile does not specify its own value."]</span>
    </div>
</div>
