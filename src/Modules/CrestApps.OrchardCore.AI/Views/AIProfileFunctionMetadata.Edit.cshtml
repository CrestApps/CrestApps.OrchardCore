@using CrestApps.OrchardCore.AI.Tools.ViewModels
@using OrchardCore

@model AIProfileFunctionMetadataViewModel

<div class="@Orchard.GetWrapperClasses()">
    <label asp-for="ProfileId" class="@Orchard.GetLabelClasses()">@T["Profile"]</label>
    <div class="@Orchard.GetEndClasses()">
        <select asp-for="ProfileId" asp-items="Model.Profiles" class="form-select">
            <option value="">@T["Select a profile"]</option>
        </select>
        <span asp-validation-for="ProfileId" class="text-danger"></span>
        <span class="hint">@T["The profile to invoke when this function is called."]</span>
    </div>
</div>
