@using CrestApps.OrchardCore.AI.Models
@using OrchardCore.DisplayManagement.Views

@model ShapeViewModel<AIDataSource>

<li>
    <a asp-action="SyncIndex"
       asp-controller="DataSources"
       asp-area="CrestApps.OrchardCore.AI.DataSources"
       asp-route-id="@Model.Value.ItemId"
       class="dropdown-item"
       data-url-af="UnsafeUrl"
       data-title="@T["Sync Index"]"
       data-message="@T["Are you sure you want to synchronize this data source index?"]"
       data-ok-text="@T["Yes"]"
       data-cancel-text="@T["Cancel"]">@T["Sync index"]</a>
</li>

<li>
    <a asp-action="Delete"
       asp-controller="DataSources"
       asp-area="CrestApps.OrchardCore.AI.DataSources"
       asp-route-id="@Model.Value.ItemId"
       class="dropdown-item text-danger"
       data-url-af="RemoveUrl UnsafeUrl"
       data-title="@T["Delete"]"
       data-message="@T["Are you sure you want to delete this data source?"]"
       data-ok-text="@T["Yes"]"
       data-cancel-text="@T["Cancel"]">@T["Delete"]</a>
</li>
