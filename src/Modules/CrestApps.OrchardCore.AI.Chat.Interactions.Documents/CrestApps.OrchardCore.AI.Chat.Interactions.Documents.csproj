<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <RootNamespace>$(MSBuildProjectName)</RootNamespace>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <Title>CrestApps OrchardCore AI Chat Interactions Documents Module</Title>
    <Description>
      $(CrestAppsDescription)

      Provides documents interaction capabilities for chat interactions.
    </Description>
    <PackageTags>$(PackageTags) OrchardCoreCMS AI Chat Interactions</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="OrchardCore.Navigation.Core" />
    <PackageReference Include="OrchardCore.Module.Targets" />
    <PackageReference Include="OrchardCore.DisplayManagement" />
    <PackageReference Include="OrchardCore.ResourceManagement" />
    <PackageReference Include="OrchardCore.Infrastructure.Abstractions" />
    <PackageReference Include="OrchardCore.Search.AzureAI.Core" />
    <PackageReference Include="Azure.Search.Documents" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.AI.Core\CrestApps.OrchardCore.AI.Core.csproj" />
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.SignalR.Core\CrestApps.OrchardCore.SignalR.Core.csproj" />
    <ProjectReference Include="..\..\Core\CrestApps.OrchardCore.OpenAI.Azure.Core\CrestApps.OrchardCore.OpenAI.Azure.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- 
      Ensure this module directly depends on the required packages so that when someone installs it, 
      they won't need to manually include the AI, AI Chat, Resources and SignalR packages. 
      This guarantees the module functions correctly and resolves the feature dependency.
    -->
    <ProjectReference Include="..\CrestApps.OrchardCore.AI\CrestApps.OrchardCore.AI.csproj" PrivateAssets="none" />
    <ProjectReference Include="..\CrestApps.OrchardCore.AI.Chat\CrestApps.OrchardCore.AI.Chat.csproj" PrivateAssets="none" />
    <ProjectReference Include="..\CrestApps.OrchardCore.AI.Chat.Interactions\CrestApps.OrchardCore.AI.Chat.Interactions.csproj" PrivateAssets="none" />
    <ProjectReference Include="..\CrestApps.OrchardCore.Resources\CrestApps.OrchardCore.Resources.csproj" PrivateAssets="none" />
    <ProjectReference Include="..\CrestApps.OrchardCore.SignalR\CrestApps.OrchardCore.SignalR.csproj" PrivateAssets="none" />
  </ItemGroup>

</Project>
