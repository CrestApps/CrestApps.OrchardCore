@page
@model CrestApps.OrchardCore.Samples.McpClient.Pages.ResourceTemplatesModel

@{
    IReadOnlyList<string> GetParameters(string uri) => CrestApps.OrchardCore.Samples.McpClient.Pages.ResourceTemplatesModel.ExtractParameters(uri);
}

<h1>Resource Templates</h1>

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<div class="d-flex align-items-center gap-3 mb-3">
    <p class="text-muted mb-0">Resource templates with parameterized URIs. Fill in the parameters and click "Read" to retrieve content.</p>
    <form method="post" asp-page-handler="Refresh" class="d-inline">
        <button class="btn btn-secondary btn-sm" type="submit">Refresh</button>
    </form>
</div>

@if (Model.Templates?.Count > 0)
{
    <div class="mb-3">
        <input type="text" id="templateSearch" class="form-control" placeholder="Search templates by name, description, or URI…" />
    </div>

    <div class="accordion" id="templatesAccordion">
        @for (var i = 0; i < Model.Templates.Count; i++)
        {
            var template = Model.Templates[i];
            var parameters = GetParameters(template.UriTemplate);
            var collapseId = $"collapse-template-{i}";
            var headerId = $"header-template-{i}";
            var resultId = $"result-template-{i}";

            <div class="accordion-item searchable-item" data-search-text="@template.Name?.ToLowerInvariant() @template.Description?.ToLowerInvariant() @template.UriTemplate?.ToLowerInvariant()">
                <h2 class="accordion-header" id="@headerId">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId">
                        <span class="fw-semibold">@template.Name</span>
                        @if (!string.IsNullOrWhiteSpace(template.Description))
                        {
                            <span class="text-muted ms-2">— @template.Description</span>
                        }
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse" data-bs-parent="#templatesAccordion">
                    <div class="accordion-body">
                        <div class="mb-2">
                            <span class="small text-muted">URI Template:</span>
                            <code class="small text-break">@template.UriTemplate</code>
                        </div>

                        <div class="resource-form" data-uri-template="@template.UriTemplate" data-result-target="#@resultId">
                            @if (parameters.Count > 0)
                            {
                                <div class="row g-2 align-items-end mb-2">
                                    @foreach (var param in parameters)
                                    {
                                        <div class="col-auto">
                                            <label class="form-label small mb-0">@param</label>
                                            <input type="text" data-param="@param" class="form-control form-control-sm" placeholder="@param" required />
                                        </div>
                                    }
                                </div>
                            }
                            <button class="btn btn-primary btn-sm btn-read-template" type="button">Read</button>
                        </div>

                        <div id="@resultId" class="mt-3" style="display:none">
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <p class="text-muted mt-2" id="templateNoResults" style="display:none">No templates match your search.</p>
}
else
{
    <p class="text-muted">No resource templates were returned by the MCP server.</p>
}

<script>
    document.querySelectorAll('.btn-read-template').forEach(function (btn) {
        btn.addEventListener('click', function () {
            var container = btn.closest('.resource-form');
            var template = container.dataset.uriTemplate;
            var resultDiv = document.querySelector(container.dataset.resultTarget);

            // Replace parameter placeholders with input values.
            var uri = template;
            var missing = false;
            container.querySelectorAll('input[data-param]').forEach(function (input) {
                if (!input.value.trim()) {
                    input.reportValidity();
                    missing = true;
                    return;
                }
                uri = uri.split('{' + input.dataset.param + '}').join(input.value);
            });
            if (missing) { return; }

            btn.disabled = true;
            btn.textContent = 'Reading…';
            resultDiv.style.display = 'block';
            resultDiv.innerHTML = '<p class="text-muted">Loading…</p>';

            var formData = new FormData();
            formData.append('resourceUri', uri);

            fetch('?handler=ReadResource', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                },
                body: formData
            })
            .then(function (response) { return response.json(); })
            .then(function (data) {
                if (data.error) {
                    resultDiv.innerHTML = '<div class="alert alert-danger mb-0">' + escapeHtml(data.error) + '</div>';
                    return;
                }
                if (!data.contents || data.contents.length === 0) {
                    resultDiv.innerHTML = '<p class="text-muted mb-0">No content returned.</p>';
                    return;
                }
                var html = '';
                data.contents.forEach(function (c) {
                    if (c.type === 'text') {
                        if (c.mimeType) {
                            html += '<div class="mb-1"><span class="badge bg-info text-dark">' + escapeHtml(c.mimeType) + '</span></div>';
                        }
                        html += '<pre class="bg-light p-3 rounded mb-2" style="max-height:400px;overflow:auto">' + escapeHtml(c.text) + '</pre>';
                    } else if (c.type === 'blob') {
                        html += '<p><span class="badge bg-warning text-dark">Binary</span>';
                        if (c.mimeType) {
                            html += ' <span class="badge bg-info text-dark">' + escapeHtml(c.mimeType) + '</span>';
                        }
                        html += '</p><p class="text-muted">Binary content (' + c.length + ' base64 characters)</p>';
                    }
                });
                resultDiv.innerHTML = html;
            })
            .catch(function (err) {
                resultDiv.innerHTML = '<div class="alert alert-danger mb-0">' + escapeHtml(err.message || 'An error occurred.') + '</div>';
            })
            .finally(function () {
                btn.disabled = false;
                btn.textContent = 'Read';
            });
        });
    });

    // Client-side search.
    (function () {
        var searchInput = document.getElementById('templateSearch');
        if (!searchInput) return;
        var items = document.querySelectorAll('#templatesAccordion .searchable-item');
        var noResults = document.getElementById('templateNoResults');
        searchInput.addEventListener('input', function () {
            var query = this.value.toLowerCase().trim();
            var visible = 0;
            items.forEach(function (item) {
                var match = !query || item.dataset.searchText.indexOf(query) !== -1;
                item.style.display = match ? '' : 'none';
                if (match) visible++;
            });
            noResults.style.display = visible === 0 && query ? '' : 'none';
        });
    })();

    function escapeHtml(text) {
        var div = document.createElement('div');
        div.appendChild(document.createTextNode(text));
        return div.innerHTML;
    }
</script>

@* Antiforgery token for AJAX calls *@
<form id="__AjaxAntiForgeryForm" method="post" style="display:none">
</form>
