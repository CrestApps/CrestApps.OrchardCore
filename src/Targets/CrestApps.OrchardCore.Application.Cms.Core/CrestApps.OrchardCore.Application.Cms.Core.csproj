<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- NuGet properties-->
    <Title>CrestApps OrchardCore Application CMS Core</Title>
    <Description>
      $(CrestAppsDescription)

      This package provides a runtime dependency aggregator for all CrestApps OrchardCore modules.
      Reference this package to ensure all CrestApps module assemblies are included during dotnet publish and in Docker builds.
    </Description>
    <PackageTags>$(PackageTags) OrchardCoreCMS CMS</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>

  <!--
    Using ProjectReference with PrivateAssets="none" ensures that:
    1. Local solution builds work correctly (projects are built in order)
    2. When packed, these become proper NuGet dependencies in the .nuspec
    This mirrors how OrchardCore handles their Application packages.
  -->
  <ItemGroup>
    <ProjectReference Include="..\..\Modules\CrestApps.OrchardCore.AI\CrestApps.OrchardCore.AI.csproj" PrivateAssets="none" />
    <ProjectReference Include="..\..\Modules\CrestApps.OrchardCore.AI.Agent\CrestApps.OrchardCore.AI.Agent.csproj" PrivateAssets="none" />
